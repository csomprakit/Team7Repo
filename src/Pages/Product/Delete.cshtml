@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileProductService ProductService
@model ContosoCrafts.WebSite.Pages.Product.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<!--Added title of the page-->
<h1>Delete</h1>

<div class="container">
    <!--Create the form for deleteting-->
    <form method="post">
        <!--target the HTML div element-->
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(x => x.Product.Id)
        <!--create the group for the name-->
        <div class="form-group">
            <label asp-for="Product.Name" class="control-label"></label>
            <input asp-for="Product.Name" class="form-control" />
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>
        <!--create the group for the description-->
        <div class="form-group">
            <label asp-for="Product.Description" class="control-label"></label>
            <input asp-for="Product.Description" class="form-control" />
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>
        <!--create the group for the cost-->
        <div class="form-group">
            <label asp-for="Product.Cost" class="control-label"></label>
            <input asp-for="Product.Cost" class="form-control" />
            <span asp-validation-for="Product.Cost" class="text-danger"></span>
        </div>

        <!--create the group for the Image-->
        <div class="form-group">
            <label asp-for="Product.Image" class="control-label"></label>
            <input asp-for="Product.Image" class="form-control" />
            <span asp-validation-for="Product.Image" class="text-danger"></span>
        </div>

        <!--create the warning for the users-->
        <h1>Warning! This action cannot be undo! Confirm Delete of this item?</h1>
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-primary" />
        </div>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}